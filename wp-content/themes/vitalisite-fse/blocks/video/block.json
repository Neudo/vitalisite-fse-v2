{
  "apiVersion": 3,
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "name": "vitalisite-fse/video",
  "version": "1.0.0",
  "title": "Vidéo Vitalisite",
  "category": "vitalisite-blocks",
  "icon": "video-alt3",
  "description": "Bloc vidéo avec support YouTube et upload.",
  "keywords": ["video", "youtube", "media"],
  "textdomain": "vitalisite-fse",
  "editorScript": "file:./index.js",
  "attributes": {
    "videoType": {
      "type": "string",
      "default": "youtube",
      "enum": ["youtube", "upload"]
    },
    "youtubeUrl": {
      "type": "string",
      "default": ""
    },
    "videoId": {
      "type": "number",
      "default": 0
    },
    "videoUrl": {
      "type": "string",
      "default": ""
    },
    "posterUrl": {
      "type": "string",
      "default": ""
    },
    "posterId": {
      "type": "number",
      "default": 0
    },
    "aspectRatio": {
      "type": "string",
      "default": "16/9"
    }
  },
  "supports": {
    "html": false
  }
}
