{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "link": true,
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#0B3D91"
        },
        {
          "name": "Primary Accent",
          "slug": "primary-accent",
          "color": "#E8EEF7"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "#6EC1E4"
        },
        {
          "name": "Secondary Accent",
          "slug": "secondary-accent",
          "color": "#E0F5FC"
        },
        {
          "name": "Contrast",
          "slug": "main",
          "color": "#0F172A"
        },
        {
          "name": "Contrast Accent",
          "slug": "main-accent",
          "color": "#64748B"
        },
        {
          "name": "Base",
          "slug": "base",
          "color": "#FFFFFF"
        },
        {
          "name": "Tint",
          "slug": "tertiary",
          "color": "#F1F5F9"
        },
        {
          "name": "Border Light",
          "slug": "border-light",
          "color": "#E2E8F0"
        },
        {
          "name": "Border Dark",
          "slug": "border-dark",
          "color": "#334155"
        },
        {
          "name": "Success",
          "slug": "success",
          "color": "#10B981"
        },
        {
          "name": "Warning",
          "slug": "warning",
          "color": "#F59E0B"
        },
        {
          "name": "Error",
          "slug": "error",
          "color": "#EF4444"
        }
      ],
      "gradients": [
        {
          "name": "Primary",
          "slug": "primary",
          "gradient": "linear-gradient(135deg, #0B3D91, #6EC1E4)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "gradient": "linear-gradient(135deg, #6EC1E4, #E0F5FC)"
        },
        {
          "name": "Calm",
          "slug": "calm",
          "gradient": "linear-gradient(135deg, #0B3D91, #0F172A)"
        },
        {
          "name": "Light",
          "slug": "light",
          "gradient": "linear-gradient(135deg, #F1F5F9, #FFFFFF)"
        }
      ]
    },
    "custom": {
      "fontWeight": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semi-bold": 600,
        "bold": 700
      },
      "lineHeight": {
        "none": 1,
        "tight": 1.1,
        "snug": 1.2,
        "body": 1.5,
        "relaxed": 1.625,
        "loose": 2
      },
      "imageRadius": "8px"
    },
    "layout": {
      "contentSize": "56rem",
      "wideSize": "60rem"
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "Small",
          "slug": "small",
          "shadow": "0px 1px 3px 0px rgba(15, 23, 42, 0.1), 0px 1px 2px 0px rgba(15, 23, 42, 0.06)"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "shadow": "0px 4px 6px -1px rgba(15, 23, 42, 0.1), 0px 2px 4px -1px rgba(15, 23, 42, 0.06)"
        },
        {
          "name": "Large",
          "slug": "large",
          "shadow": "0px 10px 15px -3px rgba(15, 23, 42, 0.1), 0px 4px 6px -2px rgba(15, 23, 42, 0.05)"
        },
        {
          "name": "Extra Large",
          "slug": "extra-large",
          "shadow": "0px 20px 25px -5px rgba(15, 23, 42, 0.1), 0px 10px 10px -5px rgba(15, 23, 42, 0.04)"
        }
      ]
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "name": "2XS",
          "size": "0.25rem",
          "slug": "20"
        },
        {
          "name": "XS",
          "size": "0.5rem",
          "slug": "30"
        },
        {
          "name": "Small",
          "size": "clamp(0.75rem, 2vw, 1rem)",
          "slug": "40"
        },
        {
          "name": "Medium",
          "size": "clamp(1rem, 3vw, 1.5rem)",
          "slug": "50"
        },
        {
          "name": "Large",
          "size": "clamp(1.5rem, 4vw, 2rem)",
          "slug": "60"
        },
        {
          "name": "XL",
          "size": "clamp(2rem, 5vw, 3rem)",
          "slug": "70"
        },
        {
          "name": "2XL",
          "size": "clamp(3rem, 7vw, 4rem)",
          "slug": "80"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "blockGap": true,
      "padding": true,
      "margin": true
    },
    "typography": {
      "dropCap": false,
      "defaultFontSizes": false,
      "fluid": true,
      "writingMode": true,
      "fontFamilies": [
        {
          "fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
          "name": "System Sans",
          "slug": "primary"
        },
        {
          "fontFamily": "Georgia, \"Times New Roman\", serif",
          "name": "Serif",
          "slug": "secondary"
        },
        {
          "fontFamily": "ui-monospace, \"Cascadia Code\", \"Source Code Pro\", Menlo, Consolas, monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        {
          "fluid": {
            "min": "0.75rem",
            "max": "0.875rem"
          },
          "size": "0.875rem",
          "slug": "x-small",
          "name": "Extra Small"
        },
        {
          "fluid": {
            "min": "0.875rem",
            "max": "1rem"
          },
          "size": "1rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "fluid": {
            "min": "1rem",
            "max": "1.125rem"
          },
          "size": "1.125rem",
          "slug": "base",
          "name": "Base"
        },
        {
          "fluid": {
            "min": "1.125rem",
            "max": "1.5rem"
          },
          "size": "1.5rem",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "fluid": {
            "min": "1.5rem",
            "max": "2.25rem"
          },
          "size": "2.25rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "fluid": {
            "min": "2rem",
            "max": "3rem"
          },
          "size": "3rem",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "fluid": {
            "min": "2.5rem",
            "max": "4rem"
          },
          "size": "4rem",
          "slug": "xx-large",
          "name": "2XL"
        }
      ],
      "lineHeight": true
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "blocks": {
      "core/button": {
        "border": {
          "radius": "6px",
          "width": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--base)"
        },
        "spacing": {
          "padding": {
            "top": "0.625rem",
            "right": "1.25rem",
            "bottom": "0.625rem",
            "left": "1.25rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600"
        }
      },
      "core/code": {
        "border": {
          "radius": "5px",
          "width": "0px"
        },
        "color": {
          "background": "var(--wp--preset--color--tertiary)",
          "text": "var(--wp--preset--color--main)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--40)",
            "right": "var(--wp--preset--spacing--40)",
            "bottom": "var(--wp--preset--spacing--40)",
            "left": "var(--wp--preset--spacing--40)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/details": {
        "css": ".wp-block-details summary { font-weight: 600; cursor: pointer; }"
      },
      "core/navigation": {
        "typography": {
          "fontWeight": "500",
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/paragraph": {
        "css": "&.has-background { padding: var(--wp--preset--spacing--40) }"
      },
      "core/post-title": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      },
      "core/quote": {
        "elements": {
          "cite": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--small)"
            },
            "color": {
              "text": "var(--wp--preset--color--main-accent)"
            }
          }
        },
        "css": "& :where(cite) { display: block }",
        "border": {
          "radius": "0",
          "style": "solid",
          "width": "0 0 0 4px !important",
          "color": "var(--wp--preset--color--primary)"
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--50)",
            "right": "var(--wp--preset--spacing--50)"
          },
          "margin": {
            "left": "0"
          }
        },
        "typography": {
          "lineHeight": "var(--wp--custom--line-height--body)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        }
      },
      "core/site-tagline": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--40)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600",
          "lineHeight": "var(--wp--custom--line-height--none)",
          "letterSpacing": "0"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--main)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "6px",
          "width": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--base)"
        },
        "spacing": {
          "padding": {
            "top": "0.625rem",
            "right": "1.25rem",
            "bottom": "0.625rem",
            "left": "1.25rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "#0a3278"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "var(--wp--custom--line-height--tight)",
          "fontWeight": "700"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "var(--wp--custom--line-height--tight)",
          "fontWeight": "700"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "var(--wp--custom--line-height--snug)",
          "fontWeight": "600"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "var(--wp--custom--line-height--snug)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "lineHeight": "var(--wp--custom--line-height--body)",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "var(--wp--custom--line-height--body)",
          "fontWeight": "600"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "600"
        },
        "color": {
          "text": "var(--wp--preset--color--main)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "#0a3278"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "0",
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "var(--wp--custom--line-height--body)"
    }
  },
  "customTemplates": [
    {
      "name": "template-links",
      "title": "Page de liens",
      "postTypes": ["page"]
    }
  ]
}
