{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": false,
    "border": {
      "radius": false,
      "color": false,
      "style": false,
      "width": false
    },
    "background": {
      "backgroundImage": false,
      "backgroundSize": false,
      "backgroundPosition": false,
      "backgroundRepeat": false
    },
    "color": {
      "custom": false,
      "customGradient": false,
      "customDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "background": false,
      "text": false,
      "palette": [
        { "slug": "vital-blue", "name": "Vital Blue", "color": "#0B3D91" },
        { "slug": "vital-sky", "name": "Vital Sky", "color": "#6EC1E4" },
        { "slug": "vital-ink", "name": "Vital Ink", "color": "#0F172A" },
        { "slug": "vital-mist", "name": "Vital Mist", "color": "#F1F5F9" }
      ]
    },
    "spacing": {
      "margin": false,
      "padding": false,
      "blockGap": false
    },
    "custom": {
      "imageRadius": "20px",
      "heroMaxWidth": "100%",
      "heroPadX": "0px"
    },
    "typography": {
      "fluid": true,
      "customFontSize": false,
      "lineHeight": false,
      "fontStyle": false,
      "fontWeight": false,
      "textDecoration": false,
      "textTransform": false,
      "letterSpacing": false,
      "fontFamilies": [
        {
          "fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, sans-serif",
          "slug": "system-sans",
          "name": "System Sans"
        },
        {
          "fontFamily": "ui-serif, Georgia, serif",
          "slug": "system-serif",
          "name": "System Serif"
        },
        {
          "fontFamily": "\"Trebuchet MS\", \"Segoe UI\", system-ui, sans-serif",
          "slug": "humanist-sans",
          "name": "Humanist Sans"
        },
        {
          "fontFamily": "\"Georgia\", \"Times New Roman\", serif",
          "slug": "classique-serif",
          "name": "Classique Serif"
        }
      ]
    },
    "layout": {
      "contentSize": "100%",
      "wideSize": "100%"
    },
    "blocks": {
      "core/group": {
        "color": {
          "background": true,
          "text": true
        },
        "border": {
          "radius": false
        },
        "spacing": {
          "margin": false,
          "padding": true,
          "blockGap": false
        },
        "typography": {
          "fontFamily": false,
          "fontSize": false,
          "lineHeight": false,
          "textDecoration": false,
          "textTransform": false,
          "letterSpacing": false
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--vital-mist)",
      "text": "var(--wp--preset--color--vital-ink)"
    },
    "blocks": {
      "core/image": {
        "border": {
          "radius": "var(--wp--custom--image-radius)"
        },
        "css": "&, & img { border-radius: var(--wp--custom--image-radius); } & { overflow: hidden; }"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans)",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--system-serif)"
        }
      }
    }
  }
}
