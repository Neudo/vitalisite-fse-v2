{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Serif Classic",
  "slug": "typography-serif-classic",
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Georgia, \"Times New Roman\", serif",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "system-ui, sans-serif",
          "name": "Sans Serif",
          "slug": "sans-serif"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--serif)",
      "fontSize": "1.125rem",
      "lineHeight": "1.7"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--sans-serif)",
          "fontWeight": "600"
        }
      }
    }
  }
}
