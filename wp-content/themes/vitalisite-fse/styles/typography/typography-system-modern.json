{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "System Modern",
  "slug": "typography-system-modern",
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, sans-serif",
          "name": "System Sans",
          "slug": "system-sans"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans)",
      "fontSize": "1.125rem",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--system-sans)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      }
    }
  }
}
