{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Mixed Contrast",
  "slug": "typography-mixed-contrast",
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Georgia, serif",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "system-ui, -apple-system, sans-serif",
          "name": "Sans Serif",
          "slug": "sans-serif"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--sans-serif)",
      "fontSize": "1.125rem",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--sans-serif)",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        }
      }
    }
  }
}
