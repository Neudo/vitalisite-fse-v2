{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Nocturne",
  "settings": {
    "custom": {
      "imageRadius": "10px"
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#5B2DFF" },
        { "name": "Primaire doux", "slug": "primary-accent", "color": "#A69BFF" },
        { "name": "Secondaire", "slug": "secondary", "color": "#00B5D8" },
        { "name": "Secondaire doux", "slug": "secondary-accent", "color": "#CFF6FF" },
        { "name": "Encre", "slug": "ink", "color": "#E2E8F0" },
        { "name": "Encre douce", "slug": "ink-soft", "color": "#94A3B8" },
        { "name": "Base", "slug": "base", "color": "#0B1020" },
        { "name": "Base douce", "slug": "base-soft", "color": "#121A2E" },
        { "name": "Bordure", "slug": "border", "color": "#28324A" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Nocturne Sans",
          "slug": "nocturne-sans",
          "fontFamily": "\"Gill Sans\", \"Helvetica\", system-ui, sans-serif"
        },
        {
          "name": "Nocturne Serif",
          "slug": "nocturne-serif",
          "fontFamily": "\"Baskerville\", \"Times New Roman\", serif"
        }
      ],
      "fontSizes": [
        { "name": "XS", "slug": "xs", "size": "0.875rem", "fluid": { "min": "0.8rem", "max": "0.95rem" } },
        { "name": "S", "slug": "sm", "size": "1rem", "fluid": { "min": "0.95rem", "max": "1.05rem" } },
        { "name": "M", "slug": "md", "size": "1.125rem", "fluid": { "min": "1.05rem", "max": "1.25rem" } },
        { "name": "L", "slug": "lg", "size": "1.5rem", "fluid": { "min": "1.3rem", "max": "1.75rem" } },
        { "name": "XL", "slug": "xl", "size": "2.25rem", "fluid": { "min": "1.9rem", "max": "2.75rem" } },
        { "name": "XXL", "slug": "xxl", "size": "3rem", "fluid": { "min": "2.4rem", "max": "3.5rem" } }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--ink)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--nocturne-sans)",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--nocturne-serif)",
          "lineHeight": "1.1",
          "letterSpacing": "-0.01em"
        }
      }
    }
  }
}
