{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Rose Poudré",
  "settings": {
    "custom": {
      "imageRadius": "12px",
      "borderRadius": {
        "cta": "10px",
        "hero": "16px",
        "small": "8px",
        "medium": "12px",
        "large": "16px"
      }
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#C7799A" },
        {
          "name": "Texte sur Primaire",
          "slug": "on-primary",
          "color": "#FFFFFF"
        },

        { "name": "Secondaire", "slug": "secondary", "color": "#4A6475" },
        {
          "name": "Texte sur Secondaire",
          "slug": "on-secondary",
          "color": "#FFFFFF"
        },

        { "name": "Background", "slug": "bg", "color": "#FBFAFB" },
        { "name": "Surface", "slug": "surface", "color": "#F4F1F4" },
        { "name": "Surface 2", "slug": "surface-2", "color": "#F4F1F4" },
        { "name": "Border", "slug": "border", "color": "#E6DEE3" },

        { "name": "Text", "slug": "text", "color": "#14181D" },
        { "name": "Muted Text", "slug": "muted", "color": "#3D4650" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Poudré Sans",
          "slug": "poudre-sans",
          "fontFamily": "\"Inter\", system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif"
        },
        {
          "name": "Poudré Serif",
          "slug": "poudre-serif",
          "fontFamily": "\"Fraunces\", \"Iowan Old Style\", \"Palatino Linotype\", serif"
        }
      ],
      "fontSizes": [
        {
          "name": "XS",
          "slug": "xs",
          "size": "0.875rem",
          "fluid": { "min": "0.8rem", "max": "0.95rem" }
        },
        {
          "name": "S",
          "slug": "sm",
          "size": "1rem",
          "fluid": { "min": "0.95rem", "max": "1.05rem" }
        },
        {
          "name": "M",
          "slug": "md",
          "size": "1.125rem",
          "fluid": { "min": "1.05rem", "max": "1.25rem" }
        },
        {
          "name": "L",
          "slug": "lg",
          "size": "1.5rem",
          "fluid": { "min": "1.3rem", "max": "1.75rem" }
        },
        {
          "name": "XL",
          "slug": "xl",
          "size": "2.25rem",
          "fluid": { "min": "1.9rem", "max": "2.75rem" }
        },
        {
          "name": "XXL",
          "slug": "xxl",
          "size": "3rem",
          "fluid": { "min": "2.4rem", "max": "3.5rem" }
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--bg)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--poudre-sans)",
      "lineHeight": "1.65"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "10px"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poudre-serif)",
          "lineHeight": "1.12",
          "letterSpacing": "-0.015em"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "10px"
        }
      }
    }
  }
}
