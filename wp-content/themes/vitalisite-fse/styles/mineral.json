{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Mineral",
  "settings": {
    "custom": {
      "imageRadius": "0px",
      "borderRadius": {
        "cta": "0px",
        "hero": "0px",
        "small": "0px",
        "medium": "2px",
        "large": "4px"
      }
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#334155" },
        {
          "name": "Primaire doux",
          "slug": "primary-accent",
          "color": "#CBD5E1"
        },
        { "name": "Secondaire", "slug": "secondary", "color": "#0F766E" },
        {
          "name": "Secondaire doux",
          "slug": "secondary-accent",
          "color": "#CCFBF1"
        },
        { "name": "Encre", "slug": "ink", "color": "#0F172A" },
        { "name": "Encre douce", "slug": "ink-soft", "color": "#64748B" },
        { "name": "Base", "slug": "base", "color": "#FFFFFF" },
        { "name": "Base douce", "slug": "base-soft", "color": "#F8FAFC" },
        { "name": "Bordure", "slug": "border", "color": "#E2E8F0" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Mineral Mono",
          "slug": "mineral-mono",
          "fontFamily": "ui-monospace, \"SF Mono\", Monaco, \"Cascadia Code\", monospace"
        },
        {
          "name": "Mineral Sans",
          "slug": "mineral-sans",
          "fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, sans-serif"
        }
      ],
      "fontSizes": [
        { "name": "XS", "slug": "xs", "size": "0.875rem", "fluid": false },
        { "name": "S", "slug": "sm", "size": "1rem", "fluid": false },
        { "name": "M", "slug": "md", "size": "1.125rem", "fluid": false },
        { "name": "L", "slug": "lg", "size": "1.5rem", "fluid": false },
        { "name": "XL", "slug": "xl", "size": "2.25rem", "fluid": false },
        { "name": "XXL", "slug": "xxl", "size": "3rem", "fluid": false }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--ink)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--mineral-sans)",
      "fontSize": "1rem",
      "fontWeight": "400",
      "lineHeight": "1.75",
      "letterSpacing": "-0.01em"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "0px"
        },
        "typography": {
          "fontWeight": "500",
          "letterSpacing": "0.02em",
          "textTransform": "uppercase",
          "fontSize": "0.875rem"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--mineral-sans)",
          "fontWeight": "800",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textDecoration": "underline"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "0px"
        }
      },
      "core/code": {
        "border": {
          "radius": "0px"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--mineral-mono)"
        }
      },
      "core/image": {
        "border": {
          "radius": "0px"
        }
      }
    }
  }
}
