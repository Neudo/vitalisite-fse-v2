{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Nature",
  "settings": {
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#2D6A4F" },
        {
          "name": "Texte sur Primaire",
          "slug": "on-primary",
          "color": "#FFFFFF"
        },

        { "name": "Secondaire", "slug": "secondary", "color": "#52B788" },
        {
          "name": "Texte sur Secondaire",
          "slug": "on-secondary",
          "color": "#1B4332"
        },

        { "name": "Background", "slug": "bg", "color": "#FFFFFF" },
        { "name": "Surface", "slug": "surface", "color": "#F1F8F4" },
        { "name": "Surface 2", "slug": "surface-2", "color": "#F1F8F4" },
        { "name": "Border", "slug": "border", "color": "#B7E4C7" },

        { "name": "Text", "slug": "text", "color": "#1B4332" },
        { "name": "Muted Text", "slug": "muted", "color": "#40916C" }
      ],
      "gradients": [
        {
          "name": "Primary",
          "slug": "primary",
          "gradient": "linear-gradient(135deg, #2D6A4F, #52B788)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "gradient": "linear-gradient(135deg, #74C69D, #D8F3DC)"
        },
        {
          "name": "Earth",
          "slug": "earth",
          "gradient": "linear-gradient(135deg, #2D6A4F, #1B4332)"
        },
        {
          "name": "Light",
          "slug": "light",
          "gradient": "linear-gradient(135deg, #F1F8F4, #FFFFFF)"
        }
      ]
    },
    "custom": {
      "borderRadius": {
        "cta": "999px",
        "hero": "18px",
        "small": "12px",
        "medium": "16px",
        "large": "20px"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--bg)",
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "999px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--on-primary)"
        },
        ":hover": {
          "color": {
            "background": "#25573f"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "#25573f"
          }
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "600"
        },
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "999px"
        }
      },
      "core/code": {
        "border": {
          "radius": "12px"
        }
      },
      "core/quote": {
        "border": {
          "radius": "0",
          "color": "var(--wp--preset--color--primary)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      }
    }
  }
}
