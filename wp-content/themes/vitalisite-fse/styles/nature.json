{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Nature",
  "settings": {
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#2D6A4F" },
        { "name": "Primaire doux", "slug": "primary-soft", "color": "#E8F5E9" },
        {
          "name": "Primaire texte",
          "slug": "primary-foreground",
          "color": "#FFFFFF"
        },
        { "name": "Secondaire", "slug": "secondary", "color": "#52B788" },
        {
          "name": "Secondaire doux",
          "slug": "secondary-soft",
          "color": "#D8F3DC"
        },
        {
          "name": "Secondaire texte",
          "slug": "secondary-foreground",
          "color": "#1B4332"
        },
        { "name": "Base", "slug": "base", "color": "#FFFFFF" },
        { "name": "Base douce", "slug": "base-soft", "color": "#F1F8F4" },
        { "name": "Bordure", "slug": "border", "color": "#B7E4C7" },
        { "name": "Encre", "slug": "ink", "color": "#1B4332" },
        { "name": "Encre douce", "slug": "ink-soft", "color": "#40916C" },
        { "name": "Succ√®s", "slug": "success", "color": "#16A34A" },
        { "name": "Avertissement", "slug": "warning", "color": "#D97706" },
        { "name": "Erreur", "slug": "error", "color": "#DC2626" }
      ],
      "gradients": [
        {
          "name": "Primary",
          "slug": "primary",
          "gradient": "linear-gradient(135deg, #2D6A4F, #52B788)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "gradient": "linear-gradient(135deg, #74C69D, #D8F3DC)"
        },
        {
          "name": "Earth",
          "slug": "earth",
          "gradient": "linear-gradient(135deg, #2D6A4F, #1B4332)"
        },
        {
          "name": "Light",
          "slug": "light",
          "gradient": "linear-gradient(135deg, #F1F8F4, #FFFFFF)"
        }
      ]
    },
    "custom": {
      "borderRadius": {
        "cta": "999px",
        "hero": "18px",
        "small": "12px",
        "medium": "16px",
        "large": "20px"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--ink)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "999px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--primary-foreground)"
        },
        ":hover": {
          "color": {
            "background": "#25573f"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "#25573f"
          }
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "600"
        },
        "color": {
          "text": "var(--wp--preset--color--ink)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "999px"
        }
      },
      "core/code": {
        "border": {
          "radius": "12px"
        }
      },
      "core/quote": {
        "border": {
          "radius": "0",
          "color": "var(--wp--preset--color--primary)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      }
    }
  }
}
