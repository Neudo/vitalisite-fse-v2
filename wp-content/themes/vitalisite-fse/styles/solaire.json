{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Solaire",
  "settings": {
    "custom": {
      "imageRadius": "8px",
      "heroMaxWidth": "1200px",
      "heroPadX": "clamp(20px, 4vw, 40px)",
      "borderRadius": {
        "cta": "12px",
        "hero": "15px",
        "small": "10px",
        "medium": "12px",
        "large": "15px"
      }
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#C24B3A" },
        {
          "name": "Texte sur Primaire",
          "slug": "on-primary",
          "color": "#FFFFFF"
        },

        { "name": "Secondaire", "slug": "secondary", "color": "#E07A5F" },
        {
          "name": "Texte sur Secondaire",
          "slug": "on-secondary",
          "color": "#FFFFFF"
        },

        { "name": "Background", "slug": "bg", "color": "#FFF9F4" },
        { "name": "Surface", "slug": "surface", "color": "#FFF1E6" },
        { "name": "Surface 2", "slug": "surface-2", "color": "#FFF1E6" },
        { "name": "Border", "slug": "border", "color": "#E6D5C8" },

        { "name": "Text", "slug": "text", "color": "#3B2F2F" },
        { "name": "Muted Text", "slug": "muted", "color": "#5E4A4A" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Solaire Sans",
          "slug": "solaire-sans",
          "fontFamily": "\"Verdana\", \"Segoe UI\", system-ui, sans-serif"
        },
        {
          "name": "Solaire Serif",
          "slug": "solaire-serif",
          "fontFamily": "\"Palatino Linotype\", \"Book Antiqua\", Palatino, serif"
        }
      ],
      "fontSizes": [
        {
          "name": "XS",
          "slug": "xs",
          "size": "0.875rem",
          "fluid": { "min": "0.8rem", "max": "0.95rem" }
        },
        {
          "name": "S",
          "slug": "sm",
          "size": "1rem",
          "fluid": { "min": "0.95rem", "max": "1.05rem" }
        },
        {
          "name": "M",
          "slug": "md",
          "size": "1.125rem",
          "fluid": { "min": "1.05rem", "max": "1.25rem" }
        },
        {
          "name": "L",
          "slug": "lg",
          "size": "1.5rem",
          "fluid": { "min": "1.3rem", "max": "1.75rem" }
        },
        {
          "name": "XL",
          "slug": "xl",
          "size": "2.25rem",
          "fluid": { "min": "1.9rem", "max": "2.75rem" }
        },
        {
          "name": "XXL",
          "slug": "xxl",
          "size": "3rem",
          "fluid": { "min": "2.4rem", "max": "3.5rem" }
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--bg)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--solaire-sans)",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "12px"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--solaire-serif)",
          "lineHeight": "1.15"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "12px"
        }
      }
    }
  }
}
