{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Clinique",
  "settings": {
    "custom": {
      "imageRadius": "20px"
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#0B3D91" },
        { "name": "Primaire doux", "slug": "primary-accent", "color": "#6EC1E4" },
        { "name": "Secondaire", "slug": "secondary", "color": "#2CB7A0" },
        { "name": "Secondaire doux", "slug": "secondary-accent", "color": "#DFF5F1" },
        { "name": "Encre", "slug": "ink", "color": "#0F172A" },
        { "name": "Encre douce", "slug": "ink-soft", "color": "#334155" },
        { "name": "Base", "slug": "base", "color": "#FFFFFF" },
        { "name": "Base douce", "slug": "base-soft", "color": "#F3F6FB" },
        { "name": "Bordure", "slug": "border", "color": "#D6E2F0" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Clinique Sans",
          "slug": "clinique-sans",
          "fontFamily": "\"Trebuchet MS\", \"Segoe UI\", system-ui, sans-serif"
        },
        {
          "name": "Clinique Serif",
          "slug": "clinique-serif",
          "fontFamily": "\"Georgia\", \"Times New Roman\", serif"
        }
      ],
      "fontSizes": [
        { "name": "XS", "slug": "xs", "size": "0.875rem", "fluid": { "min": "0.8rem", "max": "0.95rem" } },
        { "name": "S", "slug": "sm", "size": "1rem", "fluid": { "min": "0.95rem", "max": "1.05rem" } },
        { "name": "M", "slug": "md", "size": "1.125rem", "fluid": { "min": "1.05rem", "max": "1.25rem" } },
        { "name": "L", "slug": "lg", "size": "1.5rem", "fluid": { "min": "1.3rem", "max": "1.75rem" } },
        { "name": "XL", "slug": "xl", "size": "2.25rem", "fluid": { "min": "1.9rem", "max": "2.75rem" } },
        { "name": "XXL", "slug": "xxl", "size": "3rem", "fluid": { "min": "2.4rem", "max": "3.5rem" } }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--ink)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--clinique-sans)",
      "lineHeight": "1.65"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--clinique-serif)",
          "lineHeight": "1.2"
        }
      }
    }
  }
}
