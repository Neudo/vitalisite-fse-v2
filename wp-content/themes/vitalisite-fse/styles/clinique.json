{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Clinique",
  "settings": {
    "custom": {
      "imageRadius": "8px",
      "borderRadius": {
        "cta": "6px",
        "hero": "10px",
        "small": "6px",
        "medium": "8px",
        "large": "10px"
      }
    },
    "color": {
      "palette": [
        { "name": "Primaire", "slug": "primary", "color": "#0B3D91" },
        {
          "name": "Primaire doux",
          "slug": "primary-accent",
          "color": "#E8EEF7"
        },
        { "name": "Secondaire", "slug": "secondary", "color": "#6EC1E4" },
        {
          "name": "Secondaire doux",
          "slug": "secondary-accent",
          "color": "#E0F5FC"
        },
        { "name": "Encre", "slug": "ink", "color": "#0F172A" },
        { "name": "Encre douce", "slug": "ink-soft", "color": "#64748B" },
        { "name": "Base", "slug": "base", "color": "#FFFFFF" },
        { "name": "Base douce", "slug": "base-soft", "color": "#F1F5F9" },
        { "name": "Bordure", "slug": "border", "color": "#E2E8F0" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Clinique Sans",
          "slug": "clinique-sans",
          "fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, sans-serif"
        },
        {
          "name": "Clinique Serif",
          "slug": "clinique-serif",
          "fontFamily": "Georgia, \"Times New Roman\", serif"
        }
      ],
      "fontSizes": [
        {
          "name": "XS",
          "slug": "xs",
          "size": "0.875rem",
          "fluid": { "min": "0.8rem", "max": "0.95rem" }
        },
        {
          "name": "S",
          "slug": "sm",
          "size": "1rem",
          "fluid": { "min": "0.95rem", "max": "1.05rem" }
        },
        {
          "name": "M",
          "slug": "md",
          "size": "1.125rem",
          "fluid": { "min": "1.05rem", "max": "1.25rem" }
        },
        {
          "name": "L",
          "slug": "lg",
          "size": "1.5rem",
          "fluid": { "min": "1.3rem", "max": "1.75rem" }
        },
        {
          "name": "XL",
          "slug": "xl",
          "size": "2.25rem",
          "fluid": { "min": "1.9rem", "max": "2.75rem" }
        },
        {
          "name": "XXL",
          "slug": "xxl",
          "size": "3rem",
          "fluid": { "min": "2.4rem", "max": "3.5rem" }
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--ink)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--clinique-sans)",
      "fontSize": "1.125rem",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "6px"
        },
        "typography": {
          "fontWeight": "600"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--clinique-sans)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "6px"
        }
      },
      "core/code": {
        "border": {
          "radius": "6px"
        }
      },
      "core/image": {
        "border": {
          "radius": "8px"
        }
      }
    }
  }
}
