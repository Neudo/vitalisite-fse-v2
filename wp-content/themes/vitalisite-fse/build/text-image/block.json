{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "vitalisite-fse/text-image",
  "version": "1.0.0",
  "title": "Texte + Image",
  "category": "vitalisite-blocks",
  "icon": "align-pull-right",
  "description": "Section texte + image avec option d'inversion.",
  "keywords": ["text", "image", "about", "feature"],
  "textdomain": "vitalisite-fse",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "reversed": {
      "type": "boolean",
      "default": false
    },
    "hasBackground": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "spacing": {
      "margin": true,
      "padding": true
    }
  }
}
